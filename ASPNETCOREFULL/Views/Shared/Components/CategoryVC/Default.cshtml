@{
}
@model List<Category>

<table class="table table-bordered">
    <tr>
        <td> Id</td>
        <td> Name</td>
        <td> Product Count</td>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td> @category.Name</td>
            <td> @category.Products.Count()</td>
        </tr>
    }
